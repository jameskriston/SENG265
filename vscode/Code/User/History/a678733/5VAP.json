{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Survey with Input File",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\a1\\survey.exe",
      "args": [
        "/C",
        "${workspaceFolder}\\survey.exe < in01.txt"
      ],
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
      "miDebuggerArgs": "--args ${workspaceFolder}\\survey.exe < in01.txt",
      "preLaunchTask": "C/C++: gcc.exe build active file"
    }
  ]
}